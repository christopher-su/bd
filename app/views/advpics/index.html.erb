<!DOCTYPE html>
<div>
  <%= link_to "返回",pages_admin_path %> | <%= link_to "新增首页图片",new_advpic_path %>
</div>

<div>
  <% @advpics.each do |adv| %>
    <div style="position: relative;float: left;margin-right: 5px;margin-top: 3px;border: 2px slategray solid;">
      <div>
        <%= link_to(adv) do %>
          <%= image_tag adv.photo.url(:small) %>
        <% end %>
      </div>
      <div>
        <%= link_to "删除",adv,:confirm => '你确定要删除该图片吗?',:method => :delete%>
      </div>
    </div>
  <% end %>
</div>


