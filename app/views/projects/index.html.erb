<!DOCTYPE html>
<html>
<head>
  <%= stylesheet_link_tag 'gl_page', :media => 'screen' %>
</head>
<body>
<div>
  <%= link_to "返回",pages_admin_path %> | <%= link_to "新增项目",new_project_path %>
</div>

<hr/>
<div>
  <table>
    <tr class="pro_man_title_tr">
      <td></td>
      <td style="width:100px">项目名称</td>
      <td>项目描述</td>
      <td>创建时间</td>
      <td></td>
      <td></td>
    </tr>
    <% @projects.each do |pro| %>
        <tr class="pro_man_content_tr">
          <td>
            <% pro.propics.each_with_index do |img,index| %>
                <% if index == 0 %>
                    <%= image_tag image_path(img.photo.url(:s)), :size => "100x50"  %>
                <% end %>
            <% end %>
          </td>
          <td>
            <%= pro.name %>
          </td>
          <td><%= pro.desc %></td>
          <td><%= pro.created_at %></td>
          <td><%= link_to "Delete",pro,:method => "DELETE",:confirm => "Are you sure you want to delete this project?" %></td>
          <td><%= link_to "Edit",edit_project_path(pro) %></td>
          <td></td>
        </tr>
    <% end %>
  </table>

</div>
</body>
</html>


