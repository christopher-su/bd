<%= form_for @category do |f| %>

    <% if @category.errors.any? %>
        <div id="errorExplanation">
          <h2><%= pluralize(@category.errors.count, "error") %></h2>
          <ul>
            <% @category.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div>
      <%= f.label :name %><br />
      <%= f.text_field :name %>
    </div>
    <div>
      <%= f.label :desc %><br />
      <%= f.text_area :desc %>
    </div>
    <div>
      <%= f.submit %>
    </div>
<% end %>
